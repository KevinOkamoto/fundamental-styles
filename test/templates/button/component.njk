{% from "../icon/component.njk" import icon %}
{%- macro button(properties={}, classes="", design="", mode="") -%}
    {% set is_default = design == '' %}
    {{properties.design}}
    <button {{'aria-disabled="true"' if properties.disabled}} {{ 'disabled' if properties.disabled == true}} class="{{ ' fd-button' if is_default }}{{ ' fd-button--compact' if mode=='compact' }}{{ ' fd-button--'+design if not is_default }}{{ ' sap-icon--'+properties.icon if properties.icon }}">
        {%- if properties.label %}{{properties.label}}
        {%- endif %}
    </button>
{%- endmacro %}